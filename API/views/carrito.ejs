<%-include('encabezado')-%>

    <section class="home">
        <div class="headers">
            <div class="text">Carrito</div>
            <li class="buscar" >
                <i class='bx bx-search icon'></i>
                <form action="/productos/buscar">
                    <input type="search" id="buscador" name="nombre" placeholder="Search..." >
                </form>
            </li>
        </div>
        <div class="cardProduc">
            
            <% productos.forEach(e=>{ %>
                    <div class="card-carrito">
                        <img src="/<%=e.productos.imagen%>" alt="">

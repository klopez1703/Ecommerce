                            <div class="info">
                                <h3>L.<%=e.productos.precio%> C/U</h3>
                                <p class="card-text"><%=e.productos.descripcion%></p>
                            </div>
                            <div class="input">
                            <input type="number" value="<%=e.cantidad%>" placeholder="Cantidad">
                        </div>
                            <div class="boton">
                                <a href="#" class="btnvermas">Comprar</a>
                                <form action="/carrito/eliminar" method="post">
                                    <input type="text" name="idCarrito" value="<%=e.idCarrito%>" hidden>
                                    <button class="btnagregar">Eliminar</button>
                                </form>
                            </div>                        
                            
                    </div>
                <% })%>
        </div>  



        <br>
        <br>
        <footer>
            <img src="/img/logo.png" alt="logo">

<div class="home">
  <div class="headers">
    <div class="text">Productos</div>
    <li class="buscar">
      <i class="bx bx-search icon"></i>
      <form action="/productos/buscar">
        <input
          type="search"
          id="buscador"
          name="nombre"
          placeholder="Search..."
